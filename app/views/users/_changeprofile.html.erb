<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name%>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :comment, "Комментарий" %>
  <%= f.text_field :comment, class: 'form-control' %>

  <%= f.submit "Сохранить изменения", class: "btn btn-primary" %>
<% end %>
