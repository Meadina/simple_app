      <tr>
        <th>id</th>
        <th>Имя</th>
        <th>Дата регистрации</th>
        <th>Дата последнего входа</th>
        <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
          <%= render @users %>
    </tbody>
  </table>
</ul>

<%= will_paginate %>
